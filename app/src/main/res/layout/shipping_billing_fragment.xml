<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f3f5"
    android:padding="10dp"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_bg"
                android:orientation="vertical"
                android:padding="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="BILLING INFO"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imgBillingInfoMinus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:visibility="visible"
                        android:src="@mipmap/minus_black" />

                    <ImageView
                        android:id="@+id/imgBillingInfoPlus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:visibility="gone"
                        android:src="@mipmap/plus_black" />
                </RelativeLayout>

                <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                    android:id="@+id/expandableLayoutBillingInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ael_duration="500"
                    app:ael_expanded="true"
                    app:ael_interpolator="linear"
                    app:ael_orientation="vertical">

                    <EditText
                        android:id="@+id/editText1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/corner_gray_bg"
                        android:hint="Your Name"
                        android:padding="10dp" />

                    <EditText
                        android:id="@+id/editText2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/editText1"
                        android:layout_margin="4dp"
                        android:background="@drawable/corner_gray_bg"
                        android:hint="Email Address"
                        android:padding="10dp" />

                    <EditText
                        android:id="@+id/editText3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/editText2"
                        android:layout_margin="4dp"
                        android:background="@drawable/corner_gray_bg"
                        android:hint="Phone Number"
                        android:padding="10dp" />

                    <EditText
                        android:id="@+id/editText4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/editText3"
                        android:layout_margin="4dp"
                        android:background="@drawable/corner_gray_bg"
                        android:hint="Company Name"
                        android:padding="10dp" />

                    <EditText
                        android:id="@+id/editText5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/editText4"
                        android:layout_margin="4dp"
                        android:background="@drawable/corner_gray_bg"
                        android:hint="Address"
                        android:padding="10dp" />

                    <EditText
                        android:id="@+id/editText6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/editText5"
                        android:layout_margin="4dp"
                        android:background="@drawable/corner_gray_bg"
                        android:hint="Zip Code"
                        android:padding="10dp" />

                    <EditText
                        android:id="@+id/editText7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/editText6"
                        android:layout_margin="4dp"
                        android:background="@drawable/corner_gray_bg"
                        android:hint="City"
                        android:padding="10dp" />

                    <EditText
                        android:id="@+id/editText8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/editText7"
                        android:layout_margin="4dp"
                        android:background="@drawable/corner_gray_bg"
                        android:hint="Country"
                        android:padding="10dp" />
                </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_bg"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:padding="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="SHIPPING INFO"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imgSippingInfoMinus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:src="@mipmap/minus_black" />

                    <ImageView
                        android:id="@+id/imgSippingInfoPlus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:src="@mipmap/plus_black" />
                </RelativeLayout>

                <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                    android:id="@+id/expandableLayoutShippingInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ael_duration="500"
                    app:ael_expanded="false"
                    app:ael_interpolator="linear"
                    app:ael_orientation="vertical">

                    <EditText
                        android:id="@+id/editText11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:background="@drawable/corner_gray_bg"
                        android:hint="Your Name"
                        android:padding="10dp" />

                    <EditText
                        android:id="@+id/editText21"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/editText11"
                        android:layout_margin="4dp"
                        android:background="@drawable/corner_gray_bg"
                        android:hint="Email Address"
                        android:padding="10dp" />

                    <EditText
                        android:id="@+id/editText31"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/editText21"
                        android:layout_margin="4dp"
                        android:background="@drawable/corner_gray_bg"
                        android:hint="Phone Number"
                        android:padding="10dp" />

                    <EditText
                        android:id="@+id/editText41"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/editText31"
                        android:layout_margin="4dp"
                        android:background="@drawable/corner_gray_bg"
                        android:hint="Company Name"
                        android:padding="10dp" />

                    <EditText
                        android:id="@+id/editText51"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/editText41"
                        android:layout_margin="4dp"
                        android:background="@drawable/corner_gray_bg"
                        android:hint="Address"
                        android:padding="10dp" />

                    <EditText
                        android:id="@+id/editText61"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/editText51"
                        android:layout_margin="4dp"
                        android:background="@drawable/corner_gray_bg"
                        android:hint="Zip Code"
                        android:padding="10dp" />

                    <EditText
                        android:id="@+id/editText71"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/editText61"
                        android:layout_margin="4dp"
                        android:background="@drawable/corner_gray_bg"
                        android:hint="City"
                        android:padding="10dp" />

                    <EditText
                        android:id="@+id/editText81"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/editText71"
                        android:layout_margin="4dp"
                        android:background="@drawable/corner_gray_bg"
                        android:hint="Country"
                        android:padding="10dp" />
                </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</FrameLayout>
